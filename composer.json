{
  "name": "kapilsinghthakuri/rest-kit",
  "description": "Reusable REST API toolkit for Laravel projects, providing standardized responses, exception handling, validation, pagination, authentication helpers, versioning, and API best practices out-of-the-box.",
  "type": "library",
  "scripts": {
    "lint": "./vendor/bin/pint"
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/http": "^12.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.0",
    "laravel/pint": "^1.27",
    "orchestra/testbench": "^10.9"
  },
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "Kapilsinghthakuri\\RestKit\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Kapil Thakuri",
      "email": "kapilsinghthakuri33@gmail.com"
    }
  ],
  "extra": {
    "laravel": {
      "providers": [
        "Kapilsinghthakuri\\RestKit\\Providers\\RestKitServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable"
}
